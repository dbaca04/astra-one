---
// src/components/admin/Sidebar.astro
const navItems = [
    { href: "/admin", label: "Dashboard" },
    { href: "/admin/config", label: "Configuration" },
    { href: "/admin/content", label: "Content Management" },
    { href: "/admin/trigger", label: "Manual Trigger" },
    // { href: '/admin/users', label: 'Users' }, // Example for later
    { href: "/admin/login", label: "Login/Logout" }, // Placeholder for auth
];
---

<aside
    class="bg-theme-card-bg text-theme-text w-64 min-h-screen p-4 space-y-2 border-r border-theme-border"
>
    <h2 class="text-xl font-semibold mb-4 text-theme-text">Admin Menu</h2>
    <nav>
        <ul class="space-y-1">
            {
                navItems.map((item) => (
                    <li>
                        <a
                            href={item.href}
                            class:list={[
                                "block py-2 px-3 rounded hover:bg-theme-accent hover:text-theme-bg transition-colors duration-200",
                                Astro.url.pathname === item.href
                                    ? "bg-theme-accent text-theme-bg font-semibold"
                                    : "text-theme-text",
                            ]}
                        >
                            {item.label}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</aside>
