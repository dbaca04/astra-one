---
import { Picture } from "astro:assets";

// Define the props
const {
    src,
    alt,
    width = 800,
    height = 600,
    class: className,
    sizes = "(max-width: 720px) 100vw, 800px",
    quality = 80,
    formats = ["webp", "avif"],
    fit = "cover",
    position = "center",
    layout = "constrained",
} = Astro.props;
---

<Picture
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={className}
    sizes={sizes}
    formats={formats}
    quality={quality}
    fit={fit}
    position={position}
    layout={layout}
/>
