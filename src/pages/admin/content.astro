                                                class="reject-btn text-red-500 hover:text-red-600 dark:text-red-400 dark:hover:text-red-300 inline-flex items-center"
                                                data-id={draft.id}
                                                data-path={draft.filePath}
                                                title="Reject Draft"
                                            >
