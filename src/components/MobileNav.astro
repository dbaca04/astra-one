---
import HeaderLink from "./HeaderLink.astro";
---

<div class="mobile-nav">
    <button
        id="mobile-menu-toggle"
        aria-label="Menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
    >
        <span class="hamburger"></span>
    </button>

    <div id="mobile-menu" class="mobile-menu">
        <div class="menu-container">
            <HeaderLink href="/code">Code</HeaderLink>
            <HeaderLink href="/create">Create</HeaderLink>
            <HeaderLink href="/automate">Automate</HeaderLink>
            <HeaderLink href="/journal">Journal</HeaderLink>
            <HeaderLink href="/about">About</HeaderLink>
            <HeaderLink href="/contact">Contact</HeaderLink>
        </div>
    </div>
</div>

<script is:inline>
    // This script handles the mobile menu toggle functionality
    document.addEventListener("DOMContentLoaded", function () {
        setupMobileMenu();
    });

    // For Astro page transitions
    document.addEventListener("astro:page-load", function () {
        setupMobileMenu();
    });

    function setupMobileMenu() {
        const menuButton = document.getElementById("mobile-menu-toggle");
        const mobileMenu = document.getElementById("mobile-menu");

        if (!menuButton || !mobileMenu) return;

        menuButton.addEventListener("click", function () {
            const expanded =
                menuButton.getAttribute("aria-expanded") === "true";

            // Toggle menu visibility
            menuButton.setAttribute(
                "aria-expanded",
                expanded ? "false" : "true",
            );
            mobileMenu.classList.toggle("is-active");
            document.body.classList.toggle("menu-open");

            // Toggle hamburger icon
            menuButton.classList.toggle("is-active");
        });

        // Close menu when clicking on links
        const menuLinks = mobileMenu.querySelectorAll("a");
        menuLinks.forEach(function (link) {
            link.addEventListener("click", function () {
                mobileMenu.classList.remove("is-active");
                menuButton.classList.remove("is-active");
                menuButton.setAttribute("aria-expanded", "false");
                document.body.classList.remove("menu-open");
            });
        });
    }
</script>

<style>
    .mobile-nav {
        display: none;
    }

    /* Only show mobile nav on smaller screens */
    @media (max-width: 768px) {
        .mobile-nav {
            display: block !important;
        }

        /* Hamburger button styles */
        #mobile-menu-toggle {
            background: transparent;
            border: none;
            cursor: pointer;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1001;
            position: relative;
            border-radius: 50%;
            transition: background-color 0.2s ease;
        }

        #mobile-menu-toggle:hover,
        #mobile-menu-toggle:focus {
            background-color: var(--theme-selection-bg);
        }

        #mobile-menu-toggle:focus-visible {
            outline: 2px solid var(--theme-accent);
            outline-offset: 2px;
        }

        .hamburger {
            display: block;
            position: relative;
            width: 24px;
            height: 2.5px; /* Slightly thicker for better visibility */
            background-color: var(--theme-header-text);
            transition: background-color 0.2s ease-in-out;
        }

        .hamburger::before,
        .hamburger::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 2.5px; /* Slightly thicker for better visibility */
            background-color: var(--theme-header-text);
            left: 0;
            transition: transform 0.2s ease-in-out;
        }

        .hamburger::before {
            top: -8px;
        }

        .hamburger::after {
            bottom: -8px;
        }

        /* Hamburger button active state */
        #mobile-menu-toggle.is-active .hamburger {
            background-color: transparent;
        }

        #mobile-menu-toggle.is-active .hamburger::before {
            transform: translateY(8px) rotate(45deg);
        }

        #mobile-menu-toggle.is-active .hamburger::after {
            transform: translateY(-8px) rotate(-45deg);
        }

        /* Mobile menu styles */
        .mobile-menu {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: var(--theme-bg);
            color: var(--theme-text);
            z-index: 1000;
            transform: translateY(-100%);
            transition: transform 0.3s ease-in-out;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            overflow-y: auto;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        }

        .mobile-menu.is-active {
            transform: translateY(0);
        }

        .menu-container {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            text-align: center;
            width: 100%;
        }

        .menu-container a {
            font-size: 1.25rem;
            padding: 0.75rem;
            width: 100%;
            border-bottom: 1px solid var(--theme-border);
            color: var(--theme-text);
            border-radius: 6px;
            transition:
                background-color 0.2s ease,
                color 0.2s ease,
                border-left 0.2s ease;
            font-weight: 500;
        }

        .menu-container a:hover,
        .menu-container a:focus {
            background-color: var(--theme-selection-bg);
            color: var(--theme-accent);
        }

        .menu-container a:focus-visible {
            outline: 2px solid var(--theme-accent);
            outline-offset: 2px;
        }

        .menu-container a.active {
            background-color: var(--theme-selection-bg);
            font-weight: 700;
            border-left: 3px solid var(--theme-accent);
            color: var(--theme-accent);
            padding-left: calc(0.75rem - 3px);
        }

        /* Prevent background scrolling when menu is open */
        :global(body.menu-open) {
            overflow: hidden;
        }
    }
</style>
